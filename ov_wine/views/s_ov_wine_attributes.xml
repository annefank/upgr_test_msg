<odoo>
    <template id="ov_wine_attributes" inherit_id="website_sale.product" name="Product Description">
        <xpath expr="//div[@id='product_details']" position="after">
            <t t-if="product.categ_id.name=='Weine' or product.categ_id.name=='Wild- und Direktsäfte' or product.categ_id.name=='Spirituosen'">
                <div class="row"
                     style="margin: 20px 5px 10px 5px; !important;">
                    <div class="col-lg-6">
                        <table class="table">
                            <tbody>
                                <t t-if="product.sustainabilitytype_id.name">
                                    <tr>
                                        <td>
                                            <strong>Nachhaltigkeit:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.sustainabilitytype_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.wine_award">
                                    <tr>
                                        <td>
                                            <strong>Auszeichnungen:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.wine_award"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.winetype_id.name">
                                    <tr>
                                        <td>
                                            <strong>Weinart:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.winetype_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.grapes">
                                    <tr>
                                        <td>
                                            <strong>Traubensorten:</strong>
                                        </td>
                                        <td>
                                            <div t-foreach="product.grapes" t-as="grapes">
                                                <span t-esc="grapes.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                </t>

                                <t t-if="product.uom_id.name">
                                    <tr>
                                        <td>
                                            <strong>Flaschengrösse:</strong>
                                        </td>
                                        <td>
                                            <div>
                                                <span t-esc="product.uom_id.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                </t>


                                <t t-if="product.vintage_year_id.year">
                                    <tr>
                                        <td>
                                            <strong>Jahrgang:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.vintage_year_id.year"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.wine_aging">
                                    <tr>
                                        <td>
                                            <strong>Ausbau:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.wine_aging"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.best_drinking_age">
                                    <tr>
                                        <td>
                                            <strong>Höchster Genuss:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.best_drinking_age"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.alcohol">
                                    <tr>
                                        <td>
                                            <strong>Alkohol % vol:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.alcohol"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.serving_temp_id.name">
                                    <tr>
                                        <td>
                                            <strong>Servier-Temperatur:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.serving_temp_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.country_id.name">
                                    <tr>
                                        <td>
                                            <strong>Land:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.country_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.region_id.name">
                                    <tr>
                                        <td>
                                            <strong>Region:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.region_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.producer_id.name">
                                    <tr>
                                        <td>
                                            <strong>Hersteller:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.producer_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.food_pairing">
                                    <tr>
                                        <td>
                                            <strong>Passt zu:</strong>
                                        </td>
                                        <td>
                                            <div t-foreach="product.food_pairing" t-as="food">
                                                <span t-esc="food.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-6">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>
                                        <span t-raw="product.our_comment"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span t-raw="product.producer_id.description_html"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>