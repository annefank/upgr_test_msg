                <field name="country_id"/>
                <field name="region_id" domain="[('country_id','=',country_id)]"/>
                <field name="city_id"/>
                <field name="producer_id"/>
                <field name="swk_city_id"/>
                <field name="product_nr"/>
                <field name="uom_po_id"/>
                <field name="grapes" widget="many2many_tags"/>
                <field name="wine_tags" widget="many2many_tags"/>
                <field name="storable_year_id"/>
                <field name="alcohol"/>
                <field name="serving_temp_id"/>
                <field name="wine_aging"/>
                <field name="food_pairing" widget="many2many_tags"/>
                <field name="type"/>
                <field name="categ_id"/>
            </field>
        </field>
    </record>

