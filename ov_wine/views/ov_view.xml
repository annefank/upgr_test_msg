<?xml version="1.0"?>
<odoo>

    <record id="view_product_form_wine" model="ir.ui.view">
        <field name="name">wine_product_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <!-- create a copy of the view
        <field name="mode">primary</field> -->
        <field name="type">form</field>
        <field name="arch" type="xml">
            <!-- hide description -->
            <xpath expr="//page[1]/group[2]" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <!-- add pricelist-tree -->
            <xpath expr="//page[1]" position="inside">
                <group name="general_attr">
                    <field name="pricelist_ids">
                        <tree string="Defined prices" editable="bottom">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="fixed_price"/>
                            <field name="price_discount"/>
                            <field name="pricelist_id"/>
                            <field name="applied_on"/>
                        </tree>
                    </field>
                </group>
            </xpath>
            <!-- module-attributes -->
            <xpath expr="//page[1]" position="inside">
                <group name="wine-attributes">
                    <group name="left_panel">
                        <field name="country_id" widget="selection"/>
                        <field name="region_id" domain="[('country_id','=',country_id)]" widget="selection"/>
                        <field name="city_id"/>
                        <field name="producer_id"/>
                        <field name="swk_city_id" widget="selection"/>
                        <field name="product_nr"/>
                        <field name="wine_tags" widget="many2many_tags"/>
                    </group>
                    <group name="right_panel">
                        <!--                        <field name="uom_id" widget="selection"/>-->
                        <field name="sustainabilitytype_id" widget="selection"/>
                        <field name="wine_award" widget="char"/>
                        <field name="winetype_id" widget="selection"/>
                        <field name="vintage_year_id" widget="selection"/>
                        <field name="grapes" widget="many2many_tags"/>
                        <field name="best_drinking_age" widget="char"/>
                        <field name="alcohol" string="alcohol % vol."/>
                        <field name="serving_temp_id"/>
                        <field name="wine_aging" widget="char"/>
                        <field name="food_pairing" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <field name="description" widget="html"/>
                    <field name="our_comment" widget="html"/>
<!--                    <field name="memo" widget="html"/>
                    <field name="slogan" string="Slogan" widget="html"/>-->
                </group>
            </xpath>
        </field>
    </record>

    <!--modified Product tree view-->
    <record id="my_view_products_tree" model="ir.ui.view">
        <field name="name">my.view.products.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="winetype_id"/>
                <field name="sustainabilitytype_id"/>
                <field name="vintage_year_id"/>
