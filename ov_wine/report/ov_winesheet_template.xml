<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_lowmargin" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">4</field>
            <field name="margin_left">20</field>
            <field name="margin_right">20</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <template id="ov_wine.winesheet_template">
            <field name="paperformat_id" ref="ov_wine.paperformat_lowmargin"/>

            <!--            <t t-call="web.basic_layout">-->
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-foreach="docs" t-as="product">
                            <t t-call="ov_wine.winesheet_singlepage_template">
                                <t t-set="product" t-value="product"/>
                            </t>
                        </t>
                    </div>
                    <p style="page-break-before:always;"></p>
                </t>
            </t>
        </template>

        <template id="ov_wine.winesheet_singlepage_template">
            <p style="page-break-after:always"></p>
            <link rel="stylesheet" href="/ov_wine/static/src/css/winesheet.css"/>
            <div class="row h2" style="margin-top:0px;margin-bottom:20px;margin-left:10px">
                <span t-field="product.name"></span>
            </div>
            <div class="row" style="margin-left:10px;margin-right:10px">
                <div class="col-8">
                    <!-- Table with attribut-names, attributes -->
                    <div class="row" style="margin-left:10px;margin-right:10px">
                        <table>
                            <tbody>
                                <t t-if="product.sustainabilitytype_id.name">
                                    <tr>
                                        <td>
                                            <strong>Nachhaltigkeit:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.sustainabilitytype_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.wine_award">
                                    <tr>
                                        <td>
                                            <strong>Auszeichnungen:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.wine_award"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.winetype_id.name">
                                    <tr>
                                        <td>
                                            <strong>Weinart:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.winetype_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.grapes">
                                    <tr>
                                        <td>
                                            <strong>Traubensorten:</strong>
                                        </td>
                                        <td>
                                            <div t-foreach="product.grapes" t-as="grapes">
                                                <span t-esc="grapes.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.vintage_year_id.year">
                                    <tr>
                                        <td>
                                            <strong>Jahrgang:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.vintage_year_id.year"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.wine_aging">
                                    <tr>
                                        <td>
                                            <strong>Ausbau:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.wine_aging"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.best_drinking_age">
                                    <tr>
                                        <td>
                                            <strong>HÃ¶chster Genuss:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.best_drinking_age"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.alcohol">
                                    <tr>
                                        <td>
                                            <strong>Alkohol % vol:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.alcohol"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.serving_temp_id.name">
                                    <tr>
                                        <td>
                                            <strong>Servier-Temperatur:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.serving_temp_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.country_id.name">
                                    <tr>
                                        <td>
                                            <strong>Land:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.country_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.region_id.name">
                                    <tr>
                                        <td>
                                            <strong>Region:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.region_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.producer_id.name">
                                    <tr>
                                        <td>
                                            <strong>Hersteller:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="product.producer_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="product.food_pairing">
                                    <tr>
                                        <td>
                                            <strong>Passt zu:</strong>
                                        </td>
                                        <td>
                                            <div t-foreach="product.food_pairing" t-as="food">
                                                <span t-esc="food.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-4">
                    <span t-field="product.image_512" t-options-widget="&quot;image&quot;"/>
                </div>
            </div>
            <div class="row" style="margin-top:50px;margin-left:10px;margin-right:10px">
                <span t-field="product.description"/>
            </div>
            <div class="row" style="margin-top:50px;margin-left:10px;margin-right:10px">
                <span t-field="product.our_comment"/>
            </div>
        </template>
    </data>
</odoo>